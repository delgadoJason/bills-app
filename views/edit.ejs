<% include partials/header %>

<div class="container">
	<h1>Edit Bill</h1>
	<form action="/bills/<%= bill._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="companyName">Company Name</label>
			<input type="text" class="form-control" name="company" value="<%= bill.companyName %>" required>
		</div> <!-- end of form-group -->
		<div class="form-group">
			<label for="typeOfBill">Type of Bill</label>
			<input type="text" class="form-control" name="typeOfBill" value="<%= bill.typeOfBill %>" required>
		</div> <!-- end of form-group -->
		<div class="form-group">
			<label for="amount">Amount Due</label>
			<input type="number" class="form-control" name="amount" value="<%= bill.amountDue %>" required>
		</div> <!-- end of form-group -->
		<div class="form-group">
			<label for="dueDate">Due Date</label>
			<input type="date" class="form-control" name="dueDate" required>
		</div> <!-- end of form-group -->
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div> <!-- end of container -->

<% include partials/footer %>