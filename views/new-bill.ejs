<% include partials/header %>

<div class="container">
	<h1>Enter a New Bill</h1>
	<form action="/bills" method="POST">
		<div class="form-group">
			<label for="companyName">Company Name</label>
			<input type="text" class="form-control" name="company" placeholder="Enter name" required>
		</div> <!-- end of form-group -->
		<div class="form-group">
			<label for="typeOfBill">Type of Bill</label>
			<input type="text" class="form-control" name="typeOfBill" placeholder="Enter type" required>
		</div> <!-- end of form-group -->
		<div class="form-group">
			<label for="accountNumber">Account Number</label>
			<input type="text" class="form-control" name="accountNumber" placeholder="Enter account number" required>
		</div> <!-- end of form-group -->
		<div class="form-group">
			<label for="phoneNumber">Phone Number</label>
			<input type="text" class="form-control" name="phoneNumber" placeholder="Enter phone" required>
		</div> <!-- end of form-group -->
		<div class="form-group">
			<label for="amount">Amount Due</label>
			<input type="number" class="form-control" name="amount" placeholder="Enter the amount due" required>
		</div> <!-- end of form-group -->
		<div class="form-group">
			<label for="dueDate">Due Date</label>
			<input type="date" class="form-control" name="dueDate" placeholder="Enter the due date" required>
		</div> <!-- end of form-group -->
		<div class="form-group">
			<label for="website">Website</label>
			<input type="url" class="form-control" name="website" placeholder="Enter website" required>
		</div> <!-- end of form-group -->
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div> <!-- end of container -->

<% include partials/footer %>